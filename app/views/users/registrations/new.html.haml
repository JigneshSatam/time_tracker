.ui.middle.aligned.center.aligned.grid.login
  .column
    %h2.ui.teal.image.header
      %img.image{:src => image_path("time.jpg")}/
      .content
        Log-in to your account
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui large form"}) do |f|
      .ui.stacked.segment
        .field
          .ui.left.icon.input
            %i.user.icon
            = f.text_field :first_name, :placeholder => "First name", autofocus: true
        .field
          .ui.left.icon.input
            %i.user.icon
            = f.text_field :last_name, :placeholder => "Last name"
        .field
          .ui.left.icon.input
            %i.at.icon
            = f.email_field :email, :placeholder => "E-mail address"
        .field
          .ui.left.icon.input
            %i.user.icon
            = f.text_field :username, :placeholder => "Username"
        .field
          .ui.left.icon.input
            %i.lock.icon
            = f.password_field :password, autocomplete: "off", :placeholder => "Password"
        = f.submit "Sign Up", class: "ui fluid large teal submit button"
      / .ui.error.message
    - if resource.errors.present?
      .ui.bottom.attached.warning.message
        .header
          Error in User Creation
        %ul.list
          - resource.errors.full_messages.each do |msg|
            %li
              =msg
    .ui.message
      Already have a account?
      %a{:href => "/"} Login
